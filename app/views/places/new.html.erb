<h1>Cadastro de Imóvel</h1>

<%= form_with(model: Place.new) do |f| %>
  <div>
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description, 'Descrição' %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :rooms, 'Quartos' %>
    <%= f.number_field :rooms %>
  </div>
  <div>
    <%= f.label :bathrooms, 'Banheiros' %>
    <%= f.number_field :bathrooms %>
  </div>
  <div>
    <%= f.label :rent, 'Diária' %>
    <%= f.number_field :rent %>
  </div>
  <div>
    <%= f.label :pets, 'Aceita pets' %>
    <%= f.check_box :pets %>
  </div>
  <div>
    <%= f.label :parking_slot, 'Tem garagem' %>
    <%= f.check_box :parking_slot %>
  </div>
  <%= f.submit 'Enviar' %>
<%end%>
